    "compilerOptions": {
        "outDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "module": "CommonJS",
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true
